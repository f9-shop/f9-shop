
<% @page_title = $pubmenu.name %> 
<% @title1 = $ashop.shopname %>
<% @title2 = $pubmenu.name %> 

<% @back1 = asearch_asshop_path(id:$ashop) %>
<% @city  = asearch_asshops_path %>
<% @back2 = asearch_asshop_pubmenus_path %>


<% $pubmenus.each do |pubmenu| %>

  <% if $pubmenu.img1.present? %>
    <% @image1 = image_tag $pubmenu.img1_url %>
  <% else %>
    <% @image1 = image_tag "template/logo3" %>
  <% end %>

  <% if $pubmenu.img2.present? %>
    <% @image2 = image_tag $pubmenu.img2_url %>
  <% else %>
    <% @image2 = image_tag "template/logo3" %>
  <% end %>

  <% if $pubmenu.img3.present? %>
    <% @image3 = image_tag $pubmenu.img3_url %>
  <% else %>
    <% @image3 = image_tag "template/logo3" %>
  <% end %>

<% end %>

